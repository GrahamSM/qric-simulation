<%= render "sidebar" %>
<div class='content-container'>
  Total Cash: <%=@team.cash_balance%>
  Total Property Value: <%=@totalPropertyValue%>
  <ul class="cards">
    <% @properties.each do |prop| %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence"></div>
          <div class="card__content">
            <div class="card__title"><%= prop.city %></div>
              <ul id="card__info">
                <li>
                  Value: <%= prop.value %>
                </li>
                <li>
                  Development Cost: <%=prop.development.cost%>
                <li>
                  <% if prop.developed %>
                    Developed: Yes
                  <% elsif prop.in_development%>
                    Developed: In Development
                  <% end %>
                </li>
                <li>
                  Development Value: <%= prop.development.value %>
                </li>
                <li>
                  Total Value: <%=prop.getValue()%>
              </ul>
            <%= link_to 'Develop', develop_path(prop.id), class: "btn btn--block card__btn" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
