<%= render 'sidebar' %>
<h1>Active Trade Requests</h1>

<div class="table">
  <div class="row header blue">
    <div class="cell">
      Your Property Offer
    </div>
    <div class="cell">
      Your Cash Offer
    </div>
    <div class="cell">
      Counterparty
    </div>
    <div class="cell">
      Counterparty Properties
    </div>
    <div class="cell">
      Counterparty Cash
    </div>
    <div class="cell">
      Status
    </div>
    <div class="cell">
      Something
    </div>
  </div>
  <% @trade_requests.each do |trade_request| %>
    <div class="row">
      <div class="cell">
        <%= trade_request.outgoing_properties.length %>
      </div>
      <div class="cell">
        <%= trade_request.outgoing_cash %>
      </div>
      <div class="cell">
        <%= trade_request.offeror_id %>
      </div>
      <div class="cell">
        <%= trade_request.incoming_properties.length %>
      </div>
      <div class="cell">
        <%= trade_request.incoming_cash %>
      </div>
      <div class="cell">
        <%= trade_request.completed %>
      </div>
      <div class="cell">
        Something
      </div>
    </div>
  <% end %>
</div>

<br>

<h4>Select a Team to Trade With</h4>
<div class="team-links">
  <% Team.all.each do |team| %>
    <% if team.id != current_user.team_id %>
      <%= link_to "Team " + team.id.to_s, new_trade_request_path(:id => team.id), :data_hover => "team_links" %>
    <% end %>
  <% end %>
</div>


