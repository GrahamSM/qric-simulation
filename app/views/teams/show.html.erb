<%= render "sidebar" %>
<div class='content-container'>
  <p>
  Total Cash: <%=@team.cash_balance%>
  Total Property Value: <%=@totalPropertyValue%>
  </p>
  <p id="notice"><%= notice %></p>
  <h1>Properties Owned</h1>
  <ul class="cards">
    <% @properties.each do |prop| %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence"></div>
          <div class="card__content">
            <div class="card__title"><%= prop.name %></div>
              <ul id="card__info">
                <li>
                  City: <%= prop.city %>
                </li>
                <li>
                  Value: <%= number_to_currency(prop.value, :unit => "$") %>
                </li>
                <li>
                  Development Value: <%= number_to_currency(prop.development.value, :unit => "$") %>
                </li>
                <li>
                  Development Cost: <%= number_to_currency(prop.development.cost, :unit => "$") %>
                <li>
                  <% if prop.developed %>
                    Developed: Yes
                  <% elsif prop.in_development%>
                    Developed: In Development
                  <%else%>
                    Developed: No
                  <% end %>
                </li>
                <li>
                  Asset Class: <%= prop.property_type.description %>
                </li>
              </ul>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
