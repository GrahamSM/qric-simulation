<%= render "sidebar" %>
<div class='content-container'>
  <p id="notice"><%= notice %></p>
  <h1>Properties Owned</h1>
  <ul class="cards">
    <% @properties.each do |prop| %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence"></div>
          <div class="card__content">
            <div class="card__title"><%= prop.city %></div>
              <ul id="card__info">
                <li>
                  Value: <%= prop.value %>
                </li>
                <li>
                  <% if prop.developed %>
                    Developed: Yes
                  <% else %>
                    Developed: No
                  <% end %>
                </li>
                <li>
                  Development Value: <%= prop.development.value %>
                </li>
              </ul>
          </div>
        </div>
      </li>
    <% end %>
  </ul>

  Property Type 1 count:
  <%= @incentives[:countType1] %>
  <p>
    <%= link_to 'Back', teams_path %>
  </p>
</div>
