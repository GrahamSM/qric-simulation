<%= render "sidebar" %>
<div class='content-container'>
  <p>
  Total Cash: <%=@team.cash_balance%>
  Total Property Value: <%=@totalPropertyValue%>
  </p>
  <p id="notice"><%= notice %></p>
  <h1>Properties Owned</h1>
  <ul class="cards">
    <% @properties.each do |prop| %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence"></div>
          <div class="card__content">
            <div class="card__title"><%= prop.name %></div>
              <ul id="card__info">
                <li>
                  City: <%= prop.city %>
                </li>
                <li>
                  Value: <%= prop.value %>
                </li>
                <li>
                  Development Value: <%= prop.development.value %>
                </li>
                <li>
                  Development Cost: <%=prop.development.cost%>
                <li>
                  <% if prop.developed %>
                    Developed: Yes
                  <% elsif prop.in_development%>
                    Developed: In Development
                  <%else%>
                    Developed: No
                  <% end %>
                </li>
                <li>
                  Asset Class: <%= prop.property_type.description %>
                </li>
                <li>
                  Total Value: <%=prop.getValue()%>
              </ul>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
