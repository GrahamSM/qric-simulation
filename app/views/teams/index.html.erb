<%= render 'sidebar' %>
<div class='content-container'>
  <p id="notice"><%= notice %></p>
  <ul class="cards">
    <% @teams.each do |team| %>
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence"></div>
          <div class="card__content">
            <div class="card__title"><%= team.team_name %></div>
            <p class="card__text"></p>
            <%= link_to "View", team_path(team.id), class: "btn btn--block card__btn" %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
