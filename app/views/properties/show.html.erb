<%= render "sidebar" %>
<div class='content-container'>
  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <ul class="cards">
      <li class="cards__item">
        <div class="card">
          <div class="card__image card__image--fence"></div>
          <div class="card__content">
            <div class="card__title"><%= @property.city %></div>
              <ul id="card__info">
                <li>
                  Value: <%= @property.value %>
                </li>
                <li>
                  <% if @property.developed %>
                    Developed: Yes
                  <% else %>
                    Developed: No
                  <% end %>
                </li>
                <li>
                  Development Value: <%= @property.development.value %>
                </li>
              </ul>
            <%= link_to 'Develop', develop_path(@property.id), class: "btn btn--block card__btn" %>
          </div>
        </div>
      </li>
  </ul>
  <%= link_to 'Back', properties_path %>
</div>
